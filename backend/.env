# App
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# MongoDB
MONGODB_URI=mongodb://mongo:27017/organic_marketplace

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=replace_with_strong_random_secret_64_chars_minimum
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7  # days

# Resend (Email)
RESEND_API_KEY=re_1234567890abcdef  # Get from https://resend.com
FROM_EMAIL=no-reply@yourdomain.com

# OTP
OTP_EXPIRES_IN=300  # seconds (5 minutes)
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100